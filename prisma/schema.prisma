generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  clerkId   String      @unique
  name      String
  email     String      @unique
  invoices  Invoice[]
  clients   Client[]
  createdAt DateTime    @default(now())
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String    @unique
  phone     String
  gst       String?
  company   String?
  invoices  Invoice[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum InvoiceStatus {
  draft
  sent
  paid
}

model Invoice {
  id          String          @id @default(cuid())
  userId      String
  clientId    String
  status      InvoiceStatus   @default(draft)
  invoiceNo   String          @unique
  items       Json            // [{ description, quantity, rate, amount }]
  subtotal    Float
  taxPercent  Float
  taxAmount   Float
  total       Float
  invoiceDate DateTime
  dueDate     DateTime
  notes       String?
  pdfUrl      String?         // store the generated PDF path
  user        User            @relation(fields: [userId], references: [id])
  client      Client          @relation(fields: [clientId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}
