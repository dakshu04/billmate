datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(cuid())
  clerkId   String      @unique
  name      String
  email     String      @unique
  invoices  Invoice[]
  clients   Client[]
  createdAt DateTime    @default(now())
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  gst       String?
  company   String?
  invoices  Invoice[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([email, userId]) // ✅ unique per user
}

enum InvoiceStatus {
  draft
  sent
  paid
}

model Invoice {
  id          String          @id @default(cuid())
  userId      String
  clientId    String
  status      InvoiceStatus   @default(draft)
  invoiceNo   String
  items       Json
  subtotal    Float
  taxPercent  Float
  taxAmount   Float
  total       Float
  dueDate     DateTime
  notes       String?
  pdfUrl      String?
  user        User            @relation(fields: [userId], references: [id])
  client      Client          @relation(fields: [clientId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([invoiceNo, userId]) // ✅ unique per user
}
